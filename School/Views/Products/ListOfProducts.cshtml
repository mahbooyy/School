@model School.Domain.ViewModels.LoginAndRegistration.ListOfProductsViewModel
@{
    Layout = "Layout4";
    ViewData["Title"] = "Товары";
}

<div class="search">
    <div class="input">
        |
        <input type="text" id="mySearch" placeholder="Поиск">
    </div>
    <div class="icon"></div>
    <span class="clear"></span>
</div>

<div class="container-list-products">
    <div class="link-page">
        <a href="/Home/SiteInformation">Главная</a> >
        <a href="/Category/CategoryProducts">Категории</a> >
        Товары
    </div>
    <div class="filter">
        <h3>Фильтр</h3>
        <div class="price-filter">
            <label class="title">Цена для взрослых: </label>
            <span id="adult-min-label">0</span>
            <label>Минимальная цена: </label>
            <input type="range" id="adult-min-price" min="0" max="2000" value="0">
            <label>Максимальная цена: </label>
            <input type="range" id="adult-max-price" min="0" max="2000" value="2000">
            <span id="adult-max-label">1000</span>
            <div>Текущие значения: <span id="adult-price-values">0 - 2000</span></div>
        </div>
        <div class="price-filter">
            <label class="title">Цена для детей: </label>
            <span id="child-min-label">0</span>
            <label>Минимальная цена: </label>
            <input type="range" id="child-min-price" min="0" max="1000" value="0">
            <label>Максимальная цена: </label>
            <input type="range" id="child-max-price" min="0" max="1000" value="1000">
            <span id="child-max-label">1000</span>
            <div>Текущие значения: <span id="child-price-values">0 - 1000</span></div>
        </div>
        <div class="meal-types">
            <label class="title">Виды питания: </label>
            <div>
                <input type="checkbox" id="meal-type-1" value="NoMeals" class="custom-checkbox">
                <label for="meal-type-1">Без питания</label>
            </div>
            <div>
                <input type="checkbox" id="meal-type-2" value="Breakfast" class="custom-checkbox">
                <label for="meal-type-2">Завтрак</label>
            </div>
            <div>
                <input type="checkbox" id="meal-type-3" value="HalfBoard" class="custom-checkbox">
                <label for="meal-type-3">Завтрак и ужин</label>
            </div>
            <div>
                <input type="checkbox" id="meal-type-4" value="AllInclusive" class="custom-checkbox">
                <label for="meal-type-4">Все включено</label>
            </div>
            <div>
                <input type="checkbox" id="meal-type-5" value="UltraAllInclusive" class="custom-checkbox">
                <label for="meal-type-5">Ультра все включено</label>
            </div>
        </div>
        <input id="id_Category" value="@Model.Id_Category" style="display: none"
        <div class="filter-button">
            <button id="apply-filter">Применить фильтр</button>
        </div>
    </div>
    <div class="sorts">
<label for="sort-options">Сортировать по:</label>
<select id="sort-options">
<option value="">Выберите...</option>
<option value="price-adult-asc">Цена взрослых (по возрастанию)</option>
<option value="price-adult-desc">Цена взрослых (по убыванию)</option>
<option value="stars-asc">Количество звезд (по возрастанию)</option>
< <option value="stars-desc">Количество звезд (по убыванию)</option>
</select>
</div>
    <div class="container-products">
        <div class="list-products">
            @foreach (var item in Model.Products)
            {
                <div class="tour-item">
                    <img src="@item.PathImage" alt="Товар" class="item-tour-img" />
                    <div class="item-info">
                        <h2>@item.Name</h2>
                        <p>@item.Opisanie</p>
                    </div>
                    <table>
                        <tbody>

                            <tr>
                                <td><strong>@item.Price руб</strong></td>
                            </tr>
                        </tbody>
                    </table>
                    <button>Купить</button>
                    <input asp-for="@item.Id" value="@item.Id" style="display: none" />
                    <input asp-for="@item.Id_Category" value="@item.Id_Category" style="display: none" />

                </div>
            }
        </div>
    </div>
</div>